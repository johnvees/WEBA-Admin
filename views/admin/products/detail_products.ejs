<div
  class="tab-pane fade show active"
  id="add-product"
  role="tabpanel"
  aria-labelledby="profile-tab"
>
  <div class="card shadow mb-4">
    <div class="card-body">
      <form
        action="/admin/products"
        method="POST"
        enctype="multipart/form-data"
      >
        <div class="form-group">
          <label for="name">Kode Produk</label>
          <input
            type="text"
            class="form-control"
            name="kode"
            placeholder="Masukkan kode produk"
            value="<%= products.kode %>"
            readonly
            required
          />
        </div>
        <div class="form-group">
          <label for="name">Nama Produk</label>
          <input
            type="text"
            class="form-control"
            name="nama"
            placeholder="Masukkan nama produk"
            value="<%= products.nama %>"
            readonly
            required
          />
        </div>
        <div class="form-group">
          <label for="name">Client</label>
          <input
            type="text"
            class="form-control"
            name="client"
            placeholder="Masukkan jenis client"
            value="<%= products.client.nama %>"
            readonly
            required
          />
        </div>
        <div class="form-group">
          <label for="name">Deskripsi</label>
          <!-- <input
            type="text"
            class="form-control"
            name="isi"
            placeholder="Masukkan isi berita"
            required
          /> -->
          <textarea
            name="deskripsi"
            class="form-control"
            placeholder="Masukkan deskripsi produk"
            readonly
            required
          >
<%= products.deskripsi%></textarea
          >
        </div>
        <div class="form-group">
          <label for="name">Detail</label>
          <!-- <input
            type="text"
            class="form-control"
            name="isi"
            placeholder="Masukkan isi berita"
            required
          /> -->
          <textarea
            name="detail"
            class="form-control"
            placeholder="Masukkan detail produk"
            readonly
            required
          >
<%= products.detail%></textarea
          >
        </div>
        <div class="form-group">
          <label for="name">Material</label>
          <!-- <input
            type="text"
            class="form-control"
            name="isi"
            placeholder="Masukkan isi berita"
            required
          /> -->
          <textarea
            name="material"
            class="form-control"
            placeholder="Masukkan material produk"
            readonly
            required
          >
<%= products.material%></textarea
          >
        </div>
        <div class="form-group">
          <label for="name">Gambar Produk</label>
          <br />
          <% for( let i = 0; i < products.gambarId.length; i++ ) { %>
          <img
            src="https://weba-admin.herokuapp.com/<%= products.gambarId[i].imageUrl %> "
            alt="imageUrl"
            height="200px"
            style="object-fit: contain"
          />
          <% } %>
        </div>
        <a href="/admin/products" class="btn btn-warning">Back</a>
      </form>
    </div>
  </div>
</div>
