<div
  class="tab-pane fade show active"
  id="update-product"
  role="tabpanel"
  aria-labelledby="profile-tab"
>
  <div class="card shadow mb-4">
    <div class="card-body">
      <form
        action="/admin/products/update-product/<%= products.id %>?_method=PUT"
        method="POST"
        enctype="multipart/form-data"
      >
        <div class="form-group">
          <label for="name">Kode Produk</label>
          <input
            type="text"
            class="form-control"
            name="kode"
            placeholder="Masukkan kode produk"
            value="<%= products.kode %>"
            required
          />
        </div>
        <div class="form-group">
          <label for="name">Nama Produk</label>
          <input
            type="text"
            class="form-control"
            name="nama"
            placeholder="Masukkan nama produk"
            value="<%= products.nama %>"
            required
          />
        </div>
        <div class="form-group">
          <label for="name">Client</label>
          <select class="form-control" name="client" required>
            <option value="<%= products.client._id %>">
              --- <%= products.client.nama %> ---
            </option>
            <% for( let i = 0; i < clients.length; i++ ) { %>
            <option value="<%= clients[i].id %>"><%= clients[i].nama %></option>
            <% } %>
          </select>
        </div>
        <div class="form-group">
          <label for="name">Deskripsi</label>
          <textarea
            name="deskripsi"
            class="form-control"
            placeholder="Masukkan deskripsi produk"
            required
          >
<%= products.deskripsi%></textarea
          >
        </div>
        <div class="form-group">
          <label for="name">Detail</label>
          <textarea
            name="detail"
            class="form-control"
            placeholder="Masukkan detail produk"
            required
          >
<%= products.detail%></textarea
          >
        </div>
        <div class="form-group">
          <label for="name">Material</label>
          <textarea
            name="material"
            class="form-control"
            placeholder="Masukkan material produk"
            required
          >
<%= products.material%></textarea
          >
        </div>
        <div class="form-group">
          <label for="name">Gambar Produk</label>
          <input type="file" class="form-control" name="image" multiple />
        </div>
        <button type="submit" class="btn btn-primary">Update</button>
        <a href="/admin/products" class="btn btn-warning">Cancel</a>
      </form>
    </div>
  </div>
</div>
