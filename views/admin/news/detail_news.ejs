<div
  class="tab-pane fade show active"
  id="detail-news"
  role="tabpanel"
  aria-labelledby="profile-tab"
>
  <div class="card shadow mb-4">
    <div class="card-body">
      <form action="/admin/news" method="POST" enctype="multipart/form-data">
        <div class="form-group">
          <label for="name">Jenis</label>
          <input
            type="text"
            class="form-control"
            name="jenis"
            placeholder="Masukkan jenis berita"
            value="<%= news.jenis %>"
            readonly
            required
          />
        </div>
        <div class="form-group">
          <label for="name">Judul</label>
          <input
            type="text"
            class="form-control"
            name="judul"
            placeholder="Masukkan judul berita"
            value="<%= news.judul %>"
            readonly
            required
          />
        </div>
        <div class="form-group">
          <label for="name">Deskripsi</label>
          <input
            type="text"
            class="form-control"
            name="deskripsi"
            placeholder="Masukkan deskripsi berita"
            value="<%= news.deskripsi %>"
            readonly
            required
          />
        </div>
        <div class="form-group">
          <label for="name">Penulis</label>
          <input
            type="text"
            class="form-control"
            name="penulis"
            placeholder="Masukkan penulis berita"
            value="<%= news.penulis %>"
            readonly
            required
          />
        </div>
        <div class="form-group">
          <label for="name">Tanggal Rilis</label>
          <input
            type="text"
            class="form-control"
            name="tanggal"
            placeholder="Masukkan tanggal rilis berita"
            value="<%= news.tanggal.toLocaleString('en-GB').split(',')[0] %>"
            readonly
            required
          />
        </div>
        <div class="form-group">
          <label for="name">Isi</label>
          <textarea
            name="isi"
            class="form-control"
            placeholder="Masukkan isi berita"
            readonly
            required
          >
<%= news.isi %></textarea
          >
        </div>
        <div class="form-group">
          <label for="name">Gambar</label>
          <br />
          <img
            src="http://localhost:3000/<%= news.imageUrl %> "
            alt="imageUrl"
            height="200px"
          />
        </div>
        <a href="/admin/news" class="btn btn-warning">Back</a>
      </form>
    </div>
  </div>
</div>
