<div
  class="tab-pane fade show active"
  id="show-history"
  role="tabpanel"
  aria-labelledby="home-tab"
>
  <!-- DataTales Example -->
  <div class="card shadow mb-4">
    <div class="card-body">
      <div class="table-responsive">
        <table
          class="table table-bordered"
          id="dataTable"
          width="100%"
          cellspacing="0"
        >
          <thead>
            <tr>
              <th>No</th>
              <th>Jumlah Client</th>
              <th>Jumlah Project</th>
              <th>Jumlah Produk Jadi</th>
              <th>Nama Pimpinan</th>
              <th>Jabatan Pimpinan</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <% for( let i = 0; i < history.length; i++ ) { %>
            <tr>
              <td><%= i + 1 %></td>
              <td><%= history[i].jmlClient %></td>
              <td><%= history[i].jmlProject %></td>
              <td><%= history[i].jmlProdukJadi %></td>
              <td><%= history[i].namaLeader %></td>
              <td><%= history[i].jabatanLeader %></td>
              <td>
                <form
                  action="/admin/history/<%= history[i].id %>/delete?_method=DELETE"
                  method="POST"
                >
                  <a
                    href="/admin/history/detail-history/<%= history[i].id %>"
                    class="btn btn-success btn-sm"
                    ><i class="fas fa-eye"></i
                  ></a>
                  <a
                    href="/admin/history/update-history/<%= history[i].id %>"
                    class="btn btn-warning btn-sm"
                    ><i class="fas fa-edit"></i
                  ></a>
                  <button type="submit" class="btn btn-danger btn-sm">
                    <i class="fas fa-trash"></i>
                  </button>
                </form>
              </td>
            </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
